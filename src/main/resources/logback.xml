<configuration>
    <conversionRule conversionWord="coloredLevel"
                    converterClass="it.univaq.sose.simplebankingsoapservice.util.LogColorLevelConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %coloredLevel %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
